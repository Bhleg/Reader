<Window x:Name="MainWindow1" x:Class="Reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reader"
        mc:Ignorable="d"
        Title="MainWindow" WindowStartupLocation="CenterScreen" WindowStyle="None" Height="640" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" d:DesignWidth="1279.998" ResizeMode="NoResize">
    <Grid x:Name="Image">

        <Image x:Name="SinglePage" VerticalAlignment="Center" Margin="640,320,80,320" HorizontalAlignment="Center" Visibility="Collapsed"/>
        <Grid x:Name="DoubePage" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftColumn"/>
                <ColumnDefinition x:Name="RightColumn"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="LeftPage" VerticalAlignment="Center"  HorizontalAlignment="Right" Grid.Column="0"/>
            <Image x:Name="RightPage" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" />


        </Grid>
        <Grid x:Name="MainMenu" MouseLeftButtonDown="PreviousPage_Event" Opacity="0.75">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Open" Grid.Column="2" Grid.Row="0" Click="FilePickerT_Event" HorizontalAlignment="Left" VerticalAlignment="Top" Width="160" Height="80"/>
            <Button Content="Previous" Grid.Column="0" Click="PreviousPage_Event" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Width="80" Height="480" Grid.RowSpan="3"/>
            <Button Content="Next" Grid.Column="4" Click="NextPage_Event" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Width="80" Height="480" Grid.RowSpan="3"/>
            <Button Content="Main Menu" Grid.Column="2" Click="MainMenu_Event" HorizontalAlignment="Left" Height="160" Grid.Row="2" VerticalAlignment="Top" Width="160"/>



        </Grid>
    </Grid>
</Window>
