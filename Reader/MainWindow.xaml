<Controls:MetroWindow x:Name="MainWindow1" x:Class="Reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls" 
        xmlns:local="clr-namespace:Reader"
        mc:Ignorable="d"
        Title="MainWindow" WindowStartupLocation="CenterScreen" WindowStyle="None" Height="640" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" d:DesignWidth="1279.998" ResizeMode="NoResize" WindowState="Maximized">
    <Grid Grid.IsSharedSizeScope="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="Reader" Grid.ColumnSpan="2" Visibility="Collapsed" d:IsHidden="True">


            <Grid x:Name="DoubePage" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="LeftColumn"/>
                    <ColumnDefinition x:Name="RightColumn"/>
                </Grid.ColumnDefinitions>
                <Image x:Name="LeftPage" VerticalAlignment="Center"  HorizontalAlignment="Right" Grid.Column="0"/>
                <Image x:Name="RightPage" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" />
                <Image x:Name="SinglePage" Visibility="Collapsed" Grid.ColumnSpan="2"/>

            </Grid>

            <Grid x:Name="MainMenu" MouseLeftButtonDown="PreviousPage_Event" Opacity="0.75">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="Previous" Grid.Column="0" Click="PreviousPage_Event" Grid.Row="1" Grid.RowSpan="3"/>
                <Button Content="Next" Grid.Column="4" Click="NextPage_Event" Grid.Row="1" Grid.RowSpan="3"/>
                <Button Content="Main Menu" Grid.Column="2" Click="MainMenu_Event" Grid.Row="2"/>
                <StackPanel x:Name="StackMenu" Grid.Column="2" Height="240" Grid.Row="3" Grid.RowSpan="2">


                    <Button Margin="0" Click="Quit_Event" Padding="0" HorizontalContentAlignment="Center" MinHeight="30" FontSize="20">Quit</Button>
                </StackPanel>



            </Grid>
        </Grid>
        <Grid x:Name="FilePicker" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <DataGrid x:Name="FilePickerT" AutoGenerateColumns="False" GridLinesVisibility="None" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" RowHeight="50" SelectedValuePath="{Binding Source=Path}" IsReadOnly="True" SelectionMode="Single" FontSize="20" HeadersVisibility="None" VerticalScrollBarVisibility="Disabled" CanUserResizeRows="False" IsHitTestVisible="True" Grid.Row="1">

                <DataGrid.ItemContainerStyle>
                    <Style TargetType="{x:Type DataGridRow}" BasedOn="{StaticResource MetroDataGridRow}">
                        <EventSetter Event="PreviewMouseLeftButtonUp" Handler="ButtonClick_Event"/>
                    </Style>
                </DataGrid.ItemContainerStyle>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Image" Width="SizeToCells" IsReadOnly="True" CanUserResize="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Icon}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>

            <Button x:Name="GoUp_Button" Content="Go Up" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="57" Width="60" Click="GoUp_Event"/>
            <Button x:Name="CreateLibrary_Button" Content="Create Library" HorizontalAlignment="Right" Height="57" VerticalAlignment="Top" Width="60"  Click="CreateLibrary_Event" Margin="0,0,5,0"/>

        </Grid>
        <Grid x:Name="Settings" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>
            <DataGrid x:Name="DeleteLibraryGrid" AutoGenerateColumns="False" HeadersVisibility="None" SelectionMode="Single" RowHeight="50" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled" CanUserAddRows="false" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.RowSpan="2">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="{Binding Name}" Tag="{Binding Path}" Click="DeleteLibrary_Event"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>



        </Grid>
        <DataGrid x:Name="MenuGrid" Grid.Column="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" AutoGenerateColumns="False" HeadersVisibility="None" Grid.IsSharedSizeScope="True">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Image" Width="SizeToCells" IsReadOnly="True" CanUserResize="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Icon}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Name}" Tag="{Binding Command}" Click="MenuPanelbtn_Event"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Visibility="Collapsed" >
            <Image Source="/Icons/Settings.png" />
            <ItemsControl Name="MenuItem" IsTabStop="False" Height="210">
                <ItemsControl.ItemTemplate>
 
            <DataTemplate>
                        
                        <Button Tag="{Binding}" Padding="3">
                            
                            <TextBlock Text="{Binding Name}" />
                            
                            
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                

            </ItemsControl>
           
            
        </StackPanel>

    </Grid>

</Controls:MetroWindow>
