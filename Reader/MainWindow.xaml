<Window x:Name="MainWindow1" x:Class="Reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reader"
        mc:Ignorable="d"
        Title="MainWindow" WindowStartupLocation="CenterScreen" WindowStyle="None" Height="640" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" d:DesignWidth="1279.998" ResizeMode="NoResize">
    <Grid x:Name="Image">
        <Image x:Name="SinglePage" VerticalAlignment="Center" Margin="0,0,0,0" HorizontalAlignment="Center" Visibility="Collapsed"/>
        <Grid x:Name="DoubePage">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftColumn"/>
                <ColumnDefinition x:Name="RightColumn"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="LeftPage" VerticalAlignment="Center"  HorizontalAlignment="Right" Grid.Column="0"/>
            <Image x:Name="RightPage" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" />


        </Grid>
        <Grid HorizontalAlignment="Left" Margin="0,80,0,81" VerticalAlignment="Center" MouseLeftButtonDown="PreviousPage_Event" Height="480" Width="82">
            <Rectangle x:Name="PreviousPage" Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="480" Stroke="Black" VerticalAlignment="Center" Width="82" Opacity="0.8" />
            <Label x:Name="LabelPreviousPage" Content="Previous Page" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>
        <Grid HorizontalAlignment="Right" MouseLeftButtonDown="NextPage_Event" Width="82">
            <Rectangle x:Name="NextPage" Fill="#FFF4F4F5" HorizontalAlignment="Right" Stroke="Black" VerticalAlignment="Center" Opacity="0.8" Height="480" Width="82" />
            <Label x:Name="LabelNextPage" Content="Next Page" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>
        <Grid HorizontalAlignment="Center" Margin="0" VerticalAlignment="Top" MouseLeftButtonDown="FilePickerT_Event" Height="70" Width="160">
            <Rectangle x:Name="OpenFile" Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="68" Margin="0,1" Stroke="Black" VerticalAlignment="Center" Width="160" Opacity="0.8" />
            <Label Content="Open File" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>



    </Grid>

</Window>
